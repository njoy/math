#ifndef MATH_API_INTERPOLATIONREGIONINTEGRAL_HPP
#define MATH_API_INTERPOLATIONREGIONINTEGRAL_HPP

#include "utility.hpp"

#include "math/API.hpp"
#include "math/interpolate.hpp"

class math::API::InterpolationRegionIntegral {
public:
  virtual ~InterpolationRegionIntegral(){}
  
  virtual double
  xMin() const = 0;
  
  virtual double
  xMax() const = 0;

  virtual std::vector< utility::View<double> >
  xGrid() = 0;

  virtual std::vector< utility::View<const double> >
  xGrid() const = 0;

  virtual std::vector< utility::View<double> >
  yGrid() = 0;

  virtual std::vector< utility::View<const double> >
  yGrid() const = 0;

  virtual std::vector< utility::View<double> >
  dyGrid() = 0;

  virtual std::vector< utility::View<const double> >
  dyGrid() const = 0;

  virtual double
  interpolate(const double x) const = 0;

  /*
  virtual const math::API::InterpolationRegion&
  interpolationRegion() const = 0;
  */
};

#endif
